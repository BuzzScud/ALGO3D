# OBJECTIVE 28: Phase 6 - Multi-Scalar Analysis Makefile

# Compiler and flags
CC = gcc
CFLAGS = -Wall -Wextra -O2 -g -I./include
LDFLAGS = -L/workspace -lcrystalline -lm -lssl -lcrypto -lpthread

# Directories
SRC_DIR = src
INC_DIR = include
TEST_DIR = tests
BUILD_DIR = build

# Phase 1-6 source files
PHASE_SOURCES = \
	$(SRC_DIR)/crystal_abacus.c \
	$(SRC_DIR)/kissing_spheres.c \
	$(SRC_DIR)/tetration_attractors.c \
	$(SRC_DIR)/ecdlp_integration.c \
	$(SRC_DIR)/oscillation_detection.c \
	$(SRC_DIR)/recursive_search.c \
	$(SRC_DIR)/multi_scalar_analysis.c

# Object files
PHASE_OBJECTS = $(PHASE_SOURCES:$(SRC_DIR)/%.c=$(BUILD_DIR)/%.o)

# Test programs
TEST_PHASE6 = $(BUILD_DIR)/test_phase6_simple
TEST_COMPREHENSIVE = $(BUILD_DIR)/test_comprehensive_recovery

# Default target
all: directories $(TEST_PHASE6) $(TEST_COMPREHENSIVE)

# Create directories
directories:
	@mkdir -p $(BUILD_DIR)

# Compile source files
$(BUILD_DIR)/%.o: $(SRC_DIR)/%.c
	@echo "Compiling: $<"
	$(CC) $(CFLAGS) -c $< -o $@

# Build Phase 6 test
$(TEST_PHASE6): $(TEST_DIR)/test_phase6_simple.c $(PHASE_OBJECTS)
	@echo "Building Phase 6 test: $@"
	$(CC) $(CFLAGS) $< $(PHASE_OBJECTS) $(LDFLAGS) -o $@
	@echo "Phase 6 test built successfully"

# Build comprehensive recovery test
$(TEST_COMPREHENSIVE): $(TEST_DIR)/test_comprehensive_recovery.c $(PHASE_OBJECTS)
	@echo "Building comprehensive recovery test: $@"
	$(CC) $(CFLAGS) $< $(PHASE_OBJECTS) $(LDFLAGS) -o $@
	@echo "Comprehensive test built successfully"

# Run Phase 6 test
test: $(TEST_PHASE6)
	@echo ""
	@echo "========================================"
	@echo "Running Phase 6: Multi-Scalar Analysis"
	@echo "========================================"
	@LD_LIBRARY_PATH=/workspace:$$LD_LIBRARY_PATH $(TEST_PHASE6)

# Run comprehensive test
test-comprehensive: $(TEST_COMPREHENSIVE)
	@echo ""
	@echo "========================================"
	@echo "Running Comprehensive Recovery Test"
	@echo "========================================"
	@LD_LIBRARY_PATH=/workspace:$$LD_LIBRARY_PATH $(TEST_COMPREHENSIVE)

# Clean
clean:
	rm -rf $(BUILD_DIR)/*.o $(TEST_PHASE6) $(TEST_COMPREHENSIVE)

# Clean all
cleanall:
	rm -rf $(BUILD_DIR)

.PHONY: all directories test test-comprehensive clean cleanall